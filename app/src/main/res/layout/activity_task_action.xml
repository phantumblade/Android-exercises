<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <TextView
        android:id="@+id/tvTaskTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task in scadenza!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cosa vuoi fare con questo task?"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"/>

    <!-- Bottone CANCELLA (Standard Widget) -->
    <Button
        android:id="@+id/btnDeleteTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancella Task"
        android:backgroundTint="#F44336"
        android:layout_marginBottom="16dp"/>

    <!-- Bottone POSTICIPA (Standard Widget) -->
    <Button
        android:id="@+id/btnPostponeTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Posticipa a domani"
        android:backgroundTint="#2196F3"/>

</LinearLayout>
