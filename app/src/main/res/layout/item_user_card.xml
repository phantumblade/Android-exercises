<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"> <!-- QUESTO AGGIUNGE L'EFFETTO CLICK -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Icona circolare colorata -->
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="#E0F7FA"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:src="@android:drawable/sym_action_chat"
                app:tint="#0097A7"/>
        </androidx.cardview.widget.CardView>

        <!-- Testi -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email@esempio.com"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/tvUserSubtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tocca per chattare"
                android:textSize="12sp"
                android:textColor="#757575"/>

            <!-- Qui apparirÃ  la notifica rossa se ci sono messaggi -->
            <TextView
                android:id="@+id/tvUnreadBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”´ Nuovi messaggi"
                android:textColor="#D32F2F"
                android:textStyle="bold"
                android:textSize="12sp"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Freccia a destra -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_media_play"
            app:tint="#CCCCCC"
            android:rotation="0"/> <!-- Freccia stilizzata -->

    </LinearLayout>
</androidx.cardview.widget.CardView>
