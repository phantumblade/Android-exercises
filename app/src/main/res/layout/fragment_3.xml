<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestione File Avanzata"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- CAMPO NOME FILE -->
    <TextView
        android:id="@+id/lblFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File Name"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etFileName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="nome.txt"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/lblFileName"
        app:layout_constraintBottom_toBottomOf="@id/lblFileName"
        app:layout_constraintStart_toEndOf="@id/lblFileName"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- CAMPO CONTENUTO FILE -->
    <TextView
        android:id="@+id/lblFileData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File Data"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/etFileName"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etFileData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Scrivi contenuto..."
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/lblFileData"
        app:layout_constraintBottom_toBottomOf="@id/lblFileData"
        app:layout_constraintStart_toEndOf="@id/lblFileData"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- PRIMA RIGA DI BOTTONI: SAVE e VIEW -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/etFileData"
        app:layout_constraintEnd_toStartOf="@id/btnView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <Button
        android:id="@+id/btnView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIEW"
        app:layout_constraintTop_toTopOf="@id/btnSave"
        app:layout_constraintStart_toEndOf="@id/btnSave"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- SECONDA RIGA DI BOTTONI: DELETE e CLEAR (NUOVI) -->
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE"
        android:backgroundTint="#D32F2F"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnSave"
        app:layout_constraintEnd_toStartOf="@id/btnClear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEAR UI"
        android:backgroundTint="#757575"
        app:layout_constraintTop_toTopOf="@id/btnDelete"
        app:layout_constraintStart_toEndOf="@id/btnDelete"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
