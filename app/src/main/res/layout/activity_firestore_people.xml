<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestione Persone (Sync from devices)"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="128dp"
        android:layout_marginBottom="16dp"/>

    <!-- Input Fields -->
    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"/>
    <EditText
        android:id="@+id/etSurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cognome"/>
    <EditText
        android:id="@+id/etAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="EtÃ "
        android:inputType="number"/>

    <!-- Bottoni -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnAddPerson"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AGGIUNGI"
            android:backgroundTint="#673AB7"/>

        <!-- Bottone ELIMINA TUTTO (Rosso piccolo con icona) -->
        <ImageButton
            android:id="@+id/btnDeleteAll"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:src="@android:drawable/ic_menu_delete"
            android:backgroundTint="#B00020"
            android:contentDescription="Elimina tutto"
            app:tint="@android:color/white"/>
        <!-- Nota: se rounded_button_bg non esiste, usa background normale o una cardview -->
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista sincronizzata:"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"/>

    <!-- LISTA SCORREVOLE -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPeople"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <!-- weight=1 fa occupare tutto lo spazio rimanente e permette lo scroll -->

</LinearLayout>
